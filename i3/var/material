## Config file for i3-gaps
## This file is divided in differents parts :
##
## 	1.   general configuration
##	2.   window management
##	3.   keyboard shortcuts
##	4.   Everything workspace related
##	5.   Color and resize
##
## Created by Octocat

## Vars
set $bg-color				#263238
set $inactive-bg		#1A2226
set $focus					#039BE5
set $text-color			#F3F4F5
set $inactive-text	#4E535E
set $urgent					#E53935

set $mod Mod4
set $ctrl Control

## general config

font pango:inconsolata-g 11
focus_follows_mouse none

exec-always --no-startup-id dunst -config ~/.dunstrc
exec_always --no-startup-id unclutter --timeout 3
exec_always --no-startup-id nm-applet
exec_always "xset b off"
exec_always "xrandr --auto --output HDMI1 --mode 1920x1080 --right-of eDP1"
exec_always --no-startup-id compton -c --config ~/.compton
exec_always --no-startup-id ~/.config/polybar/start

exec_always feh --bg-scale /data/static/wallpaper --bg-fill /data/static/wallpaper

bindcode 135 exec --no-startup-id "play /data/static/snd.ogg"
bindcode $ctrl+135 exec --no-startup-id "play /data/static/snd2.ogg"

## window management

for_window [class="^.*"] border pixel 3 
gaps inner 20
gaps outer 10

## Floating window
for_window [window_role="pop-up"]		floating enable
for_window [window_role="bubble"]		floating enable
for_window [window_role="task_dialog"]		floating enable
for_window [window_role="dialog"]		floating enable
for_window [window_role="menu"]			floating enable
for_window [class="Thunar"]			floating enable
for_window [class="Vlc"]			floating enable
floating_modifier $mod

new_window normal

## keyboard shortcuts

bindsym $mod+Return exec termite

# Scripts and important keybinds
bindsym $mod+d exec --no-startup-id rofi -show drun
bindsym $mod+p exec --no-startup-id /home/tom/.bin/lock
bindsym $mod+f fullscreen toggle
bindsym $mod+q kill

# Split direction
bindsym $mod+b split h
bindsym $mod+v split v

# Change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Mode window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Toggle tilling or floating
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent

# Function Keys
bindsym XF86MonBrightnessDown exec --no-startup-id "xbacklight -dec 5"
bindsym XF86MonBrightnessUp exec --no-startup-id "xbacklight -inc 5"
bindsym XF86AudioLowerVolume exec --no-startup-id "amixer -q sset Master 2%-"
bindsym XF86AudioRaiseVolume exec --no-startup-id "amixer -q sset Master 2%+"

# Change layout
# bindsym $mod+s layout stacking
# bindsym $mod+w layout tabbed
# bindsym $mod+e layout toggle split

## workspaces

# Names
set $workspace1 "1.  "
set $workspace2 "2.  "
set $workspace3 "3.  "
set $workspace4	"4.  "
set $workspace5 "5.  "
set $workspace6 "6.  "
set $workspace7 "7.  "
set $workspace8 "8.  "
set $workspace9 "9.  "
set $workspace10 "10.  "

# Switch between workspaces
bindsym $mod+1 workspace $workspace1
bindsym $mod+2 workspace $workspace2
bindsym $mod+3 workspace $workspace3
bindsym $mod+4 workspace $workspace4
bindsym $mod+5 workspace $workspace5
bindsym $mod+6 workspace $workspace6
bindsym $mod+7 workspace $workspace7
bindsym $mod+8 workspace $workspace8
bindsym $mod+9 workspace $workspace9
bindsym $mod+0 workspace $workspace10

# Move window to designated workspace
bindsym $mod+Shift+1 move container to workspace $workspace1
bindsym $mod+Shift+2 move container to workspace $workspace2
bindsym $mod+Shift+3 move container to workspace $workspace3
bindsym $mod+Shift+4 move container to workspace $workspace4
bindsym $mod+Shift+5 move container to workspace $workspace5
bindsym $mod+Shift+6 move container to workspace $workspace6
bindsym $mod+Shift+7 move container to workspace $workspace7
bindsym $mod+Shift+8 move container to workspace $workspace8
bindsym $mod+Shift+9 move container to workspace $workspace9
bindsym $mod+Shift+0 move container to workspace $workspace10

# Assigned workspaces
# assign [class="Chromium"]				workspace $workspace2
# assign [class="Slack"]					workspace $workspace3
# assign [class="Google Play Music Desktop Player"]	workspace $workspace10

## Colors and resize

##############		border		bg		text		focus	child border
client.focused		$bg-color	$bg-color	$text-color	$focus	$focus-border
client.unfocused	$inactive-bg	$inactive-bg	$inactive-text	$focus
client.focused_inactive	$inactive-bg	$inactive-bg	$inactive-text	$focus
client.urgent		$urgent	$urgent	$text-color	$focus
##############

# Reload config file / restart i3 / exit i3
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Do you really want to exit i3 ?' -b 'Yes' 'i3-msg exit'"

# Resize mode
mode "resize" {
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # Back to default
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

